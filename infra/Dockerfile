# Start from a base image with Java installed (e.g., OpenJDK 17)
FROM openjdk:21-jdk-slim

# The JAR file name is generated by Maven. Adjust the name if necessary.
ARG JAR_FILE=target/Mtgdeckbuilder-*.jar

# Copy the JAR file from the local target directory into the container
COPY ${JAR_FILE} app.jar

# Expose the default port for the Spring Boot application
EXPOSE 8080

# Run the application when the container starts
ENTRYPOINT ["java","-jar","/app.jar"]